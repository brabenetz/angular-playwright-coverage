{
  "name": "angular-playwright-coverage",
  "version": "0.0.0",
  "scripts": {
    "coverage-collect": "cpr coverage/karma/coverage-karma.json  ./coverage/tmp/coverage-karma.json -o && cpr coverage/playwright/coverage-playright.json ./coverage/tmp/coverage-playright.json -o",
    "coverage-merge": "nyc report --all --reporter lcovonly --reporter html --reporter text --reporter json --reporter text-summary -t ./coverage/tmp --report-dir coverage/all",
    "coverage-all": "npm run coverage-collect && npm run coverage-merge",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --browsers ChromeHeadless --watch false --code-coverage=true",
    "test:watch": "ng test --watch true",
    "playwright:test-ui": "npx playwright test --ui",
    "playwright:test-ui-with-screenshots": "cross-env SCREENSHOT_VALIDATION=true npx playwright test --ui",
    "playwright:test-all": "npx playwright test",
    "playwright:test-update": "cross-env SCREENSHOT_VALIDATION=true npx playwright test --update-snapshots"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.1",
    "@angular/cli": "^20.3.1",
    "@angular/compiler-cli": "^20.3.0",
    "@playwright/test": "^1.55.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.5.1",
    "cpr": "^3.0.1",
    "cross-env": "^10.0.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "monocart-reporter": "^2.9.21",
    "nyc": "^17.1.0",
    "typescript": "~5.9.2"
  }
}
